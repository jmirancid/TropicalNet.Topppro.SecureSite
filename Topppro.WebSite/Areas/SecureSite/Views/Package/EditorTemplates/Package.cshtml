@using Framework.MVC.Resources
@using Framework.MVC.Extensions

@model Topppro.Entities.Package

@Html.HiddenFor(model => model.ParentProductId)
@Html.ValidationMessageFor(model => model.ParentProductId)

<div class="form-group">
    @Html.LabelFor(model => model.ChildProductId)
    @Html.DropDownListFor(model => model.ChildProductId, null, PersistanceResource.Selection, new { @class = "form-control", style = "width:400px;" })
    @Html.ValidationMessageFor(model => model.ChildProductId, null, new { @class = "label label-danger" })
</div>

<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.InheritAttribute)
        @Html.DisplayNameFor(m => m.InheritAttribute)
        @Html.ValidationMessageFor(model => model.InheritAttribute)
    </label>
</div>

<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.InheritHiRes)
        @Html.DisplayNameFor(m => m.InheritHiRes)
        @Html.ValidationMessageFor(model => model.InheritHiRes)
    </label>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Priority)
    @Html.TextBoxFor(model => model.Priority, new { @class = "form-control", style = "width:400px;" })
    @Html.ValidationMessageFor(model => model.Priority)
</div>

<div class="checkbox">
    <label>
        @Html.CheckBoxFor(model => model.Enabled)
        @Html.DisplayNameFor(model => model.Enabled)
        @Html.ValidationMessageFor(model => model.Enabled)
    </label>
</div>
