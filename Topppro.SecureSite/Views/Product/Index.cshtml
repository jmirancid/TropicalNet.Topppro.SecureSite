@using Topppro.SecureSite.Models;

@model IEnumerable<Topppro.Entities.Product>

@{
    ViewBag.Title = "Index";
    ViewBag.CurrentMenu = Menu_Enum.Products;
}

@section Styles {
    <link rel="Stylesheet" type="text/css" href="@Url.Content("~/Scripts/old/dataTables/dataTables.bootstrap.css")" />
}

@section Toolbar {
    @Html.Partial("_Toolbar")
}

<table class="table table-striped table-bordered table-hover" id="data">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelId)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Model.Name)</td>
                <td class="center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/old/dataTables/jquery.dataTables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/old/dataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#data').dataTable();
        });
    </script>
}
